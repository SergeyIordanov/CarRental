@model IEnumerable<CarRental.WEB.ViewModels.ReviewViewModel>

@using CarRental.WEB.Helpers

@if (!Model.Any())
{
    <p class="flow-text centralized welcome-text">Be the first one who leave a review!</p>
}
else
{
    foreach (var item in Model.Reverse())
    {
        <div class="row">
            <div class="col s10 push-s1">
                <div class="card">
                    <div class="card-content">
                        <div class="col s6">
                            @if (item.UserId != null)
                            {
                                <span>Author: @Html.DisplayFor(modelItem => item.UserName)</span>
                            }
                            else
                            {
                                <span>Author: Anonymous</span>
                            }                     
                        </div>
                        <div class="col s6 right-align">
                            @Html.DisplayFor(modelItem => item.PublishDate)
                        </div>
                        <hr />
                        <div class="col s12">
                            @Html.WriteHtml(item.Text.Replace("\r\n", "<br>"))
                        </div>
                        <div class="row"></div>
                    </div>
                </div>
            </div>
        </div>
    }
}
