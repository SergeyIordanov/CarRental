@model CarRental.WEB.ViewModels.OrderViewModel

@{
    ViewBag.Title = "Successful rent";
}

<div class="row no-margin-bot">

    <!-- Main body -->
    <div class="col s7 push-s1">
        <div id="main-body" class="card">
            <!-- Min body header -->
            <div class="row"></div>
            <p class="flow-text welcome-text centralized">Successful rent!</p>
            <p class="flow-text sub-welcome-text centralized">Rent was completed successfully.</p>
            <hr class="colored-hr" />
            <div class="row">
                <div class="col s10 push-s1">
                    <p class="flow-text sub-welcome-text no-margin-bot">1) Wait for accepting of your order. You can find and check it in <a href="/Order/UserOrders">your orders</a>.</p>
                    <p class="flow-text sub-welcome-text no-margin-vart">2) Foot the bill you'll get after the order will be accepted.</p>
                    <p class="flow-text sub-welcome-text no-margin-vart">3) Come by specified address and get your car!</p>
                </div>
            </div>
            <div class="row">
                <div class="col s3 push-s1">
                    <div class="collection no-margin-vert">
                        @Html.RouteLink("Main", new {controller = "Home", action = "Index"}, new {@class = "collection-item main-color-text"})
                    </div>
                </div>
                <div class="col s4 push-s1">
                    <div class="collection no-margin-vert">
                        @Html.RouteLink("My orders", new {controller = "Order", action = "UserOrders"}, new {@class = "collection-item main-color-background active"})
                    </div>
                </div>
                <div class="col s3 push-s1">
                    <div class="collection no-margin-vert">
                        @Html.RouteLink("Cars", new {controller = "Car", action = "Index"}, new {@class = "collection-item main-color-text"})
                    </div>
                </div>
            </div>
            <div class="row"></div>
        </div>
    </div>

    <!-- Rigth side -->
    <div class="col s3 push-s1">
        <!-- Login block -->
        <div class="row">
            @Html.Partial("../Partials/_Loginblock")
        </div>
        <!-- Menu block -->
        <div class="row">
            <div id="right-sidebar" class="card centralized">
                <div class="row"></div>
                <p class="card-title flow-text">Menu</p>
                <div class="collection with-header">
                    @Html.RouteLink("Main", new { controller = "Home", action = "Index" }, new { @class = "collection-item main-color-text" })
                    @Html.RouteLink("Cars", new { controller = "Car", action = "Index" }, new { @class = "collection-item main-color-text" })
                    @Html.RouteLink("Reviews", new { controller = "Review", action = "Index" }, new { @class = "collection-item main-color-text" })
                    @Html.RouteLink("Contacts", new { controller = "Home", action = "Contacts" }, new { @class = "collection-item main-color-text" })
                </div>
            </div>
        </div>
    </div>
</div>

